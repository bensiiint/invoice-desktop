{
  "name": "engineering-invoice-desktop",
  "version": "1.0.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "description": "Professional quotation and billing application for KUSAKABE & MAENO TECH., INC",
  "author": "KUSAKABE & MAENO TECH., INC",
  "dependencies": {
    "html2pdf.js": "^0.10.1",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "cross-env BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "dev": "npm run build && electron .",
    "dev-live": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\" --kill-others",
    "prod": "npm run build && electron .",
    "pack": "npm run build && electron-builder --publish=never",
    "pack-win": "npm run build && electron-builder --win --publish=never",
    "pack-mac": "npm run build && electron-builder --mac --publish=never",
    "pack-linux": "npm run build && electron-builder --linux --publish=never",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-win": "npm run build && electron-builder --win --x64 --publish=never",
    "dist-mac": "npm run build && electron-builder --mac --publish=never",
    "dist-linux": "npm run build && electron-builder --linux --publish=never",
    "web": "react-scripts start"
  },
  "build": {
    "appId": "com.kusakabemaeno.engineeringinvoice",
    "productName": "KMTI Quotation App",
    "copyright": "Copyright Â© 2025 KUSAKABE & MAENO TECH., INC",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/icon.*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "publisherName": "KUSAKABE & MAENO TECH., INC"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "license": null
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "publish": null
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^7.0.1"
  }
}